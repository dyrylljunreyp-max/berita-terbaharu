<script>
let lines = [
    "[!] Mengakses Kamera‚Ä¶",
    "[!] Mengaktifkan Mikrofon‚Ä¶",
    "[!] Mengambil Lokasi GPS‚Ä¶",
    "[!] Membaca Chat WhatsApp‚Ä¶",
    "[!] Mengirim SMS Rahsia‚Ä¶"
];

let i = 0;
let consoleEl = document.getElementById("console");

function typeLine(text, callback) {
    let j = 0;
    let span = document.createElement("span");
    span.className = "line";
    consoleEl.appendChild(span);

    let interval = setInterval(() => {
        span.textContent += text[j];
        j++;
        if (j >= text.length) {
            clearInterval(interval);
            consoleEl.appendChild(document.createElement("br"));
            callback();
        }
    }, 50);
}

function nextLine() {
    if (i < lines.length) {
        typeLine(lines[i], () => {
            i++;
            nextLine();
        });
    }
}

nextLine();

// stop prank
document.getElementById("stopBtn").onclick = showToast;
document.addEventListener("keydown", e => {
    if (e.key === "Escape") showToast();
});

function showToast(){
    let t = document.getElementById("toast");
    t.className = "toast show";
    setTimeout(()=>{ t.className = t.className.replace("show", ""); }, 3000);
}
</script>
